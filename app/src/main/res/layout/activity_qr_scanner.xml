<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@drawable/bg"
    android:layout_height="match_parent"
    tools:context=".QrScanner">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:padding="16dp">



    <!-- Search and Date Selector -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">


    </LinearLayout>

    <!-- QR Code Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp"
        android:text="Scan QR code to mark Attendance"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/qr_code_image"
        android:layout_width="250dp"
        android:layout_height="200dp"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:src="@drawable/scan" />

    <!-- Scan Button -->
    <EditText
        android:id="@+id/input_text"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/qr_code_image"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="270dp"
        android:layout_marginBottom="350dp"
        android:background="#D9D9D9"
        android:gravity="center"
        android:hint="Enter text"
        android:inputType="text"
        android:textColor="@color/black" />

    <!-- Bottom Corner Image -->

    <Button
        android:id="@+id/generate_button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/qr_code_image"
        android:layout_marginTop="193dp"
        android:backgroundTint="#00BCD4"
        android:text="Generate QR code"
        android:layout_marginStart="60dp"
        android:textColor="#fff"
        android:textSize="20sp" />

    <Button
        android:id="@+id/to_after_scanned"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/qr_code_image"
        android:layout_marginStart="60dp"
        android:layout_marginTop="264dp"
        android:backgroundTint="#00BCD4"
        android:text="AFTER SCANNED"
        android:textColor="#fff"
        android:textSize="20sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/etdob"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentEnd="true"
        android:visibility="invisible"
        android:layout_gravity="center"
        android:layout_marginStart="18dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="90dp"
        android:background="@drawable/double_color"
        android:text="Choose date"
        android:textColor="@color/black" />

</RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>